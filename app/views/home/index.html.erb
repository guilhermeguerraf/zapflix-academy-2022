<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col-md-6 mainCard">
      <%= image_tag @movies[0].cover_url %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <strong class="card-title"><%= @movies[0].title %></strong>
        <p class="card-text"><b>Diretor:</b> <span><%= @movies[0].director[:name] %></span></p>
        <p class="card-text"><b>Estreia:</b> <span><%=l @movies[0].published_at %></span></p>
