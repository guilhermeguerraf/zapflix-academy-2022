<div class="d-flex justify-content-between align-items-center">
  <h2>Diretores</h2>
  <%= link_to "+ Novo", new_director_path, class: "btn btn-primary" %>
</div>

<table id="directors" class="table table-sm table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Criado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @directors.each do |director| %>
      <%= render director %>
    <% end %>
  </tbody>
</table>
