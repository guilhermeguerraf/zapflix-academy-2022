<tr id="<%= dom_id movie %>" class="align-middle">
  <td><%= movie.title %></td>
  <td><%= movie.director[:name] %></td>
  <td><%= movie.movie_genre[:name] %></td>
  <td><%=l movie.published_at %></td>
  <td>
    <%= link_to edit_movie_path(movie), class: "btn btn-link" do %>
      <%= image_tag 'icons/editIcon.png' %>
    <% end %>
    <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#deleteMovie<%= movie.id %>">
      <%= image_tag 'icons/deleteIcon.png' %>
    </button>
  </td>
  
  <div class="modal fade" id="deleteMovie<%= movie.id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content dark-gray-6">
        <div class="modal-header dark-gray-5">
          <h5 class="modal-title" id="deleteModalLabel">Atenção</h5>
        </div>
        <div class="modal-body px-3 py-5">
          <strong class="mb-2">Deseja realmente excluir este item?</strong>
          <p>Após a exclusão não será mais possível recuperar os dados!</p>
        </div>
        <div class="modal-footer dark-gray-5 px-4 py-3">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <%= button_to "Excluir", movie, method: :delete, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</tr>
