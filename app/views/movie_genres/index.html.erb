<div class="d-flex justify-content-between align-items-center">
  <h1>Movie genres</h1>
  <%= link_to "+ New", new_movie_genre_path, class: "btn btn-primary" %>
</div>

<table id="movie_genres" class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Criado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @movie_genres.each do |movie_genre| %>
      <%= render movie_genre %>
    <% end %>
  </tbody>
</table>

