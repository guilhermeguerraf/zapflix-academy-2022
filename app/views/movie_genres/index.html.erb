<div>
  <div class="d-flex justify-content-between align-items-center">
    <h2>Gêneros</h2>
    <%= link_to "+ Novo", new_movie_genre_path, class: "btn btn-primary" %>
  </div>

  <table id="movie_genres" class="table table-sm table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Criado em</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @movie_genres.map do |movie_genre| %>
        <%= render movie_genre %>
      <% end %>
    </tbody>
  </table>
</div>
