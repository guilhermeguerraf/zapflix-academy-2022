<div class="d-flex justify-content-between align-items-center">
  <h2>Artistas</h2>
  <%= link_to "+ Novo", new_artist_path, class: "btn btn-primary" %>
</div>

<table id="artists" class="table table-sm table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Criado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <%= render artist %>
    <% end %>
  </tbody>
</table>
